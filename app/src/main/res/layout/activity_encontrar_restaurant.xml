<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_compartir"
    android:layout_height="match_parent"
    tools:context="com.example.win8.foodtemplate.Actividades.EncontrarRestaurantActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/ic_mensaje"
            android:layout_weight="0.4"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="55dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Los Angeles Ca."
                        android:drawableStart="@drawable/ic_marcador_ciudad"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="44dp"
                        android:layout_height="4dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:drawableStart="@drawable/ic_local"
                        android:text="Fast Food"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_marginLeft="68dp"
                        android:layout_marginRight="68dp"
                        android:layout_gravity="center"
                        android:background="#e9e9e9"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:hint="Nombre del Restaurant"
                        android:textColor="#4267B2"
                        android:layout_height="25dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:layout_width="125dp"
            android:text="Encontrar"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/estilo_circle"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
