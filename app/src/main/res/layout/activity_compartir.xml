<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_compartir"
    tools:context="com.example.win8.foodtemplate.Actividades.CompartirActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:gravity="center"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/ic_mensaje"
            android:layout_weight="0.4"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="68dp"
                        android:layout_marginRight="68dp"
                        android:layout_gravity="center"
                        android:background="#e9e9e9"
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:text='"Wow, esta riquÃ­simo"'
                        android:textColor="#4267B2"
                        android:layout_height="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="55dp">
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_facebook"
                        android:backgroundTint="#4267B2"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="4dp"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_pinterest"
                        android:backgroundTint="#d32f2f"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="4dp"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_twitter"
                        android:backgroundTint="@android:color/white"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="4dp"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:backgroundTint="#DBBABA"
                        android:src="@drawable/ic_instagram"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_width="8dp"
                        android:layout_height="4dp"/>
                    <android.support.design.widget.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_tumbler"
                        android:backgroundTint="@android:color/white"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:layout_width="125dp"
            android:text="Compartir"
            android:backgroundTint="@color/colorPrimary"
            android:background="@drawable/estilo_circle"
            android:textColor="#fff"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
